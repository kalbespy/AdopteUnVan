{% extends 'layout.html.twig' %}

{% block content %}

	<div class="container">
		<div class="d-flex justify-content-center">
			<h1 class="text-center my-5 fs-1 result-h1 fw-bold p-2">Vous avez un match
				<span class="heart">❤</span>
				!!</h1>
		</div>
		<div class="van-list d-flex justify-content-center flex-direction-column" id="van-list">

			<div class="card card-result text-center align-self-center">
				<div class="card-body">
					<h5 class="card-title fs-2 fw-bold">{{van.type}}</h5>
					<img src="{{van.image}}" class="img-fluid my-2" style="center/cover" alt="image de van">
					<div>
						<li class="fs-5">
							<strong>Nombre de places :</strong>
							{{van.seats}}</li>
						<li class="fs-5">
							<strong>Longueur :</strong>
							{{van.size}}
							mètres</li>
						<li class="fs-5">
							<strong>Nombre de places :</strong>
							{{van.seats}}</li>
						<li class="fs-5">
							<strong>Douche :</strong>
							{% if van.shower %}
								oui
							{% else %}
								non
							{% endif %}
						</li>
						<li class="fs-5">
							<strong>Cuisine :</strong>
							{% if van.kitchen %}
								oui
							{% else %}
								non
							{% endif %}
						</li>
						<li class="fs-5">
							<strong>Toilettes :</strong>
							{% if van.toilet %}
								oui
							{% else %}
								non
							{% endif %}
						</li>
						<li class="fs-5">
							<strong>Panneau solaire :</strong>
							{% if van.solar_panel %}
								oui
							{% else %}
								non
							{% endif %}
						</li>
						<li class="fs-5">
							<strong>Réserve d'eau :</strong>
							{% if van.water_reserve %}
								oui
							{% else %}
								non
							{% endif %}
						</li>
					</ul>
				</div>
				<br>

				<div class="fs-5 fw-bold">{{van.description}}</div>
			</div>
			<div class="container">
				<a class="d-flex justify-content-center text-decoration-none" href="">
					<button class="button-34 fs-3 " role=" button" href=" ">Recommencer</button>
				</a>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="d-flex justify-content-center">
			<h1 class="text-center my-5 fs-1 result-h1 fw-bold p-2">Pour aller plus loin</h1>
		</div>
		<div class="van-list d-flex justify-content-center flex-direction-column" id="van-list">
			<div class="card card-result text-center align-self-center">
				<div class="card-body">
					<h5 class="card-title fs-3 fw-bold">Ou acheter ou louer ce type de véhicule</h5>
					<br>

					<li class="fs-4">Site #1
						<br>
						<a href=" {{ van.lien1 }} ">
							<img src="/assets/images/vanshop1.png" class="logovan" width="60" alt="...">
						</a>
					</li>
					<br>
					<li class="fs-4">Site #2
						<br>

						<a href=" {{ van.lien2 }} ">
							<img src="/assets/images/vanshop2.png" class="logovan" width="60" alt="...">
						</a>
					</li>
					<br><br>


					<h5 class="card-title fs-3 fw-bold">Information pratiques</h5>
					<br>

					<li class="fs-5">
						<strong>Ou se garer</strong>
						<br>
						<a href="https://park4night.com/?langage=fr">
							Park4night</a>
						<br><br>
					</li>
					<li class="fs-5">
						<strong>Se tenir informé:</strong>
						<br>
						<a href=" https://www.campingcarlesite.com/camping-car-info">Camping-car: Le site</a>
						<br><br>
					</li>


					<li class="fs-5">
						<strong>Organiser votre voyage</strong>
						<br>
						<a href="https://roadtrippers.com/ ">
							Roadtrippers</a>
						<br><br>
					</li>
				</div>
			</div>
		</div>
	</h1>
	<div class="container">
		<a class="d-flex justify-content-center text-decoration-none" href="/vans">
			<button class="button-34 fs-3">Voir tous les vans</button>
		</a>
	</div>
</div>{% endblock %}
